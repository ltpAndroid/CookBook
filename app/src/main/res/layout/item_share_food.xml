<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_iv_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_iv_head"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/item_iv_head"
        android:text="刘天鹏"
        android:textColor="#1296db"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_tv_nickname"
        android:layout_below="@+id/item_tv_nickname"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_iv_head"
        android:text="345"
        android:textColor="#A1A1A1"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/imagesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_tv_nickname"
        android:layout_below="@+id/item_tv_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"></RelativeLayout>

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_tv_nickname"
        android:layout_below="@+id/imagesLayout"
        android:layout_marginTop="10dp"
        android:text="234"
        android:textColor="#6E6E6E"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_tv_time"
        android:layout_alignParentEnd="true"
        android:text="删除"
        android:textColor="#0277BD"
        android:textSize="14sp" />
</RelativeLayout>